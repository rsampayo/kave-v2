# API Settings
API_ENV=development
DEBUG=True
SECRET_KEY=your_secret_key_here

# Database
# SQLite for development (default)
DATABASE_URL=sqlite:///./dev.db

# PostgreSQL for production testing (uncomment to use)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/kave_test

# PostgreSQL details (if using a separate PostgreSQL server)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=db
POSTGRES_DB=kave

# MailChimp Settings
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_WEBHOOK_SECRET=your_mailchimp_webhook_secret

# S3 Storage Settings (required for Heroku deployment)
S3_BUCKET_NAME=your_s3_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
USE_S3_STORAGE=True 